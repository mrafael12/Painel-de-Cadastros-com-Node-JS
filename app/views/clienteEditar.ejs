<script>
    $(document).ready(function(){
        $('#btn_salvar').click(function(){        
            if(document.getElementById("senha").value != document.getElementById("confirmacao_senha").value) {
                alert("A senha deve ser igual a confirmação de senha!");
                return (false);
            }
            else {
                return (true);
            }
        })
    })        
</script>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Edição de Cliente</h4>
                                </div>
                                <div class="card-body">
                                    <form action="/salvarCliente" method="POST">
                                        <div class="row">
                                            <div class="col-md-4 pr-1">
                                                <div class="form-group">
                                                    <label>Id</label>
                                                     <input type="text" class="form-control" readonly=true placeholder="Id" name="id" value="<%= clientes[0].id %>" > 
                                                </div>
                                            </div>
                                            <div class="col-md-4 px-1">
                                                <div class="form-group">
                                                    <label>Nome</label>
                                                    <input type="text" class="form-control" placeholder="Nome" name="nome" onKeyUP="this.value = this.value.toUpperCase()" required=true value="<%= clientes[0].nome %>" >
                                                </div>
                                            </div> 
                                            <div class="col-md-4 pr-1">
                                                <label>Email</label>                                            
                                                <div class="form-group">                                                    
                                                    <input type="email" name="email" id="email" class="form-control" required=true value="<%= clientes[0].email %>" >
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 pr-1">
                                                <div class="form-group">
                                                    <label>Senha</label>
                                                    <input type="password" id="senha" class="form-control" placeholder="Senha" name="senha" required=true>
                                                </div>
                                            </div>
                                            <div class="col-md-6 px-1">
                                                <div class="form-group">
                                                    <label>Confirmação de Senha</label>
                                                    <input type="password" id="confirmacao_senha" class="form-control" placeholder="Confirmação de Senha" name="confirmacao_senha" required=true>
                                                </div>
                                            </div>                                                                                         
                                        </div>                                                                                
                                        <button id="btn_salvar" class="btn btn-info btn-fill pull-center">Salvar</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>                           
            </div>

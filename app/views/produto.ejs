                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#pablo">
                                    <span class="no-icon">Sair</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">                  
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Cadastro de Produto</h4>
                                </div>
                                <div class="card-body">
                                    <form action="/salvarProduto" class="form-upload" method="POST" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-md-3 pr-1">
                                                <div class="form-group">
                                                    <label>Id </label>
                                                    <input type="text" class="form-control" disabled placeholder="Id" name="id">
                                                </div>
                                            </div>
                                            <div class="col-md-3 px-1">
                                                <div class="form-group">
                                                    <label>Nome</label>
                                                    <input type="text" class="form-control" placeholder="Nome" name="nome" required=true>
                                                </div>
                                            </div>  
                                            <div class="col-md-6 px-1">
                                                <div class="form-group">
                                                    <label>Descrição</label>
                                                    <input type="text" class="form-control" placeholder="Descrição" name="descricao" required=true>
                                                </div>
                                            </div>                                           
                                        </div>
                                        <div class="row">
                                            <div class="col-md-3 pr-1">
                                                <div class="form-group">
                                                    <label>Valor</label>
                                                    <input type="text" class="form-control" placeholder="Valor" name="valor" required=true>
                                                </div>
                                            </div>                                           
                                            <div class="col-md-1 pr-1">
                                                <div class="form-group">
                                                    <label>Destaque?</label>
                                                    <input type="checkbox" name="destaque">
                                                </div>
                                            </div>
                                            <div class="col-md-2 pr-1">
                                                <div class="form-group">
                                                    <label>Cadastro</label>
                                                    <input type="date" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" class="form-control" placeholder="Cadastro" name="data_cadastro" required=true>
                                                </div>
                                            </div> 
                                            <div class="col-md-3 pr-1">
                                                <label for="sel1">Fabricantes:</label>
                                                <% if( fabricantes.length > 0 ) { %>                                                                                                           
                                                    <select class="form-control" id="id_fabricante" name="id_fabricante">
                                                        <% for(var i = 0; i < fabricantes.length; i++){ %>
                                                            <option value="<%= fabricantes[i].id %>"><%= fabricantes[i].nome %></option>                                                                                                            
                                                        <% } %>
                                                    </select>                                                    
                                                <% } %>
                                            </div>
                                            <div class="col-md-3 pr-1">
                                                <label for="sel1">Categorias:</label>
                                                <% if( categorias.length > 0 ) { %>                                                                                                           
                                                    <select class="form-control" id="id_categoria" name="id_categoria">
                                                        <% for(var i = 0; i < categorias.length; i++){ %>
                                                            <option value="<%= categorias[i].id %>"><%= categorias[i].nome %></option>                                                                                                            
                                                        <% } %>
                                                    </select>                                                    
                                                <% } %>
                                            </div> 
                                        </div>    
                                        <div class="row">
                                            <div class="col-md-6 pr-1">
                                                <label>Foto</label>                                            
                                                <div class="form-group">                                                    
                                                    <input type="file" name="arquivo" id="arquivo" class="form-control" required=true>
                                                </div>
                                            </div>
                                        </div>                                                                           
                                        <button type="submit" id="salvar_produto" class="btn btn-info btn-fill pull-center">Salvar</button>
                                        <div class="clearfix"></div>
                                    </form>
                                </div>
                            </div>
                        </div>                        
                    </div>
                </div>           
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">                             
                            <div class="card strpied-tabled-with-hover">                                
                                <div class="card-body table-full-width table-responsive">
                                    <table class="table table-hover table-striped">
                                        <thead>
                                            <th>ID</th>
                                            <th>Nome</th>    
                                            <th>Descrição</th>
                                            <th>Valor</th>
                                            <th>Fabricante</th>
                                            <th>Categoria</th>                                            
                                            <th>Foto</th>
                                            <th>Ações</th>                                        
                                        </thead>
                                        <tbody>
                                            <% for(var i = 0; i < produtos.length; i++){ %>
                                                <tr>                                                                                                    
                                                    <td>
                                                        <%= produtos[i].id %>  
                                                    </td> 
                                                    <td>                                                           
                                                        <%= produtos[i].nome %>
                                                    </td>
                                                    <td>                                                           
                                                        <%= produtos[i].descricao %>
                                                    </td>
                                                    <td>                                                           
                                                        <%= produtos[i].valor %>
                                                    </td>  
                                                    <td>                                                           
                                                        <%= produtos[i].fabricante %>
                                                    </td> 
                                                    <td>                                                           
                                                        <%= produtos[i].categoria %>
                                                    </td>                                                    
                                                    <td>                                                           
                                                        <%= produtos[i].foto %>                                                        
                                                        <img src="uploads/<%= produtos[i].foto %>" height="60" width="60">                                                        
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-sucess btn-fill pull-center" href="/editarProduto/<%= produtos[i].id %>">Editar</a>
                                                        <a class="btn btn-info pull-center" href="/excluirProduto/<%= produtos[i].id %>">Excluir</a>
                                                    </td>                                                                                                 
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>                                                                               
                        </div>                        
                    </div>
                </div>
            </div>
